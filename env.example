# 애플리케이션 기본 설정
APP_NAME=PDF Compressor
APP_VERSION=1.0.0
ENVIRONMENT=production

# 서버 설정
HOST=0.0.0.0
PORT=8000
WEB_CONCURRENCY=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# 업로드 설정
MAX_UPLOAD_SIZE_MB=2048
MAX_FILES_PER_BATCH=20
UPLOAD_DIR=/data/uploads
RESULT_DIR=/data/results
TEMP_DIR=/data/temp

# Redis 설정
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery 워커 설정
MAX_WORKERS=4
WORKER_CONCURRENCY=2
TASK_TIMEOUT_SECONDS=1800
TASK_MAX_RETRIES=3

# 파일 보관 설정
RETENTION_HOURS=24
CLEANUP_INTERVAL_HOURS=1

# 보안 설정
SECRET_KEY=change-this-to-random-secret-key-in-production
ENABLE_ANTIVIRUS=false
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# S3 설정 (옵션)
ENABLE_S3=false
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# 로깅
LOG_LEVEL=INFO
LOG_FORMAT=json

# 메트릭
ENABLE_METRICS=true
METRICS_PORT=9090

# 웹훅 (옵션)
WEBHOOK_ENABLED=false
WEBHOOK_URL=

# PDF 압축 기본 설정
DEFAULT_PRESET=ebook
DEFAULT_ENGINE=ghostscript
ENABLE_ENGINE_FALLBACK=true

# 파일 해시 캐싱
ENABLE_DEDUPLICATION=true













